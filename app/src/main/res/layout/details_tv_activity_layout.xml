<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/progressBar_tv"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="200dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/progress" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:id="@+id/layout_tv"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleType="centerCrop"
                        android:background="@color/colorPrimary"
                        android:id="@+id/cover"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:rotation="180"
                        android:visibility="visible"
                        app:srcCompat="@drawable/dark_gradient"
                        android:layout_alignParentBottom="true"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fantastic Beasts and Where to Find Them"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_margin="10dp"
                        android:id="@+id/title"
                        android:layout_alignParentBottom="true"
                        />




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="170dp"
                        android:orientation="horizontal" >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            >
                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/oval"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2016"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/white"
                                android:id="@+id/year"
                                />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    android:layout_width="85dp"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:stepSize="1"
                                    android:rating="3.5"
                                    android:padding="3dp"
                                    android:layout_gravity="center"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:theme="@style/RatingBar"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="33547 votes"
                                    android:layout_gravity="center"
                                    android:textColor="@color/textcolor"
                                    android:id="@+id/voteCount"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ID: 25548"
                                    android:layout_gravity="center"
                                    android:textColor="@color/textcolor"
                                    android:id="@+id/id_number"
                                    />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 8.5"
                                android:textSize="34sp"
                                android:textColor="@color/white"
                                android:id="@+id/rating"
                                />
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/layout_genre1"
                        android:visibility="invisible"
                        android:background="@drawable/oval_dark">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Family"
                            android:textSize="12sp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textStyle="normal"
                            android:id="@+id/genre1"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/layout_genre2"
                        android:visibility="invisible"
                        android:background="@drawable/oval_dark">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Action"
                            android:textSize="12sp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textStyle="normal"
                            android:id="@+id/genre2"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/layout_genre3"
                        android:visibility="invisible"
                        android:background="@drawable/oval_dark">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="adventure dsf"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:id="@+id/genre3"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingRight="10dp"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/like"
                            app:srcCompat="@drawable/if_heart_1814104"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.gms.ads.AdView
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        ads:adSize="BANNER"
                        ads:adUnitId="@string/Admob_Banner">
                    </com.google.android.gms.ads.AdView>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="number_of_seasons: 7"
                        android:textColor="@color/white"
                        android:id="@+id/number_of_seasons"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="number_of_episodes: 80"
                        android:textColor="@color/white"
                        android:id="@+id/number_of_episodes"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:visibility="visible"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Storyline"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/textcolor"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:id="@+id/overview"
                        />
                </LinearLayout>
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/lightcolor"
                        android:id="@+id/episodes_layout"
                        android:focusableInTouchMode="true"> <!-- Prevents scrolling location from being overriden by RecyclerView -->



                        <RelativeLayout
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner_episodes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/if_arrow_down" />

                        </RelativeLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/recyclerView_episodes"
                            android:clickable="true"
                            android:scrollbars="vertical"
                            />

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>
                <LinearLayout
                    android:id="@+id/actors_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:background="@color/lightcolor">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cast"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:layout_margin="5dp"
                        android:textColor="@color/textcolor"          />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recyclerView_actors"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:id="@+id/image_layout"
                    android:background="@color/lightcolor">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Images"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textColor="@color/textcolor"          />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recyclerView_images"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:id="@+id/trailer_layout"
                    android:background="@color/lightcolor">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trailers"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textColor="@color/textcolor"          />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recyclerView_trailers"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/crew_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:background="@color/lightcolor">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crew"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textColor="@color/textcolor"          />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recyclerView_crew"
                        />


                </LinearLayout>
            </LinearLayout>





        </LinearLayout>

    </ScrollView>

</LinearLayout>
